<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    tools:context=".Login">

    // Volume

    // Name

    <ImageView
        android:id="@+id/volume"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/volume_on"
        android:onClick="changeVolume"
        android:paddingTop="@android:dimen/app_icon_size"></ImageView>

    <EditText
        android:id="@+id/nameOfPlayer"
        android:autofillHints="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Name Player"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:textStyle="bold|italic"
        android:focusableInTouchMode="true"/>

    <TextView
        android:id="@+id/label_of_radioBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:text=" Feel Lucky ? "
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_below="@+id/nameOfPlayer"
        android:textAlignment="center">
    </TextView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:layout_marginHorizontal="@android:dimen/notification_large_icon_width"
        android:layout_below="@id/label_of_radioBtn">

        <RadioButton
            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:checked="true"
            android:outlineAmbientShadowColor="@android:color/white"
            android:text=" 3 "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <RadioButton
            android:id="@+id/radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 4 "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginHorizontal="20dp"/>

        <RadioButton
            android:id="@+id/radio_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 5 "
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginHorizontal="20dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_startGame"
        android:layout_below="@id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="clickToPlay"
        android:layout_centerInParent="true"
        android:text=" Play "/>

    <Button
        android:id="@+id/exit"
        android:layout_below="@+id/btn_startGame"
        android:onClick="clickToExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=" EXIT "/>



</RelativeLayout>